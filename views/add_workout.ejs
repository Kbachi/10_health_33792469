<!doctype html>
<html>
  <head>
    <title><%= appName %> - Add Workout</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1><%= appName %></h1>

    <nav>
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/workout/add">Add Workout</a>
      <a href="/workout/search">Search Workouts</a>
      <% if (session && session.userId) { %>
        <span>Logged in as <%= session.username %></span>
        <a href="/auth/logout">Logout</a>
      <% } else { %>
        <a href="/auth/login">Login</a>
        <a href="/auth/register">Register</a>
      <% } %>
    </nav>

    <h2>Add Workout</h2>

    <form method="POST" action="/workout/added">
      <p>
        Date:
        <input type="date" name="workout_date" required />
      </p>
      <p>
        Activity:
        <input type="text" name="activity" required />
      </p>
      <p>
        Duration (minutes):
        <input type="number" name="duration_minutes" min="1" required />
      </p>
      <p>
        Notes:
        <textarea name="notes"></textarea>
      </p>
      <p>
        <input type="submit" value="Save workout" />
      </p>
    </form>
  </body>
</html>
